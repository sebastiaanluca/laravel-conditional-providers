{
    "name": "sebastiaanluca/laravel-conditional-providers",
    "type": "library",
    "description": "Load Laravel service providers based on the current environment.",
    "keywords": [
        "laravel",
        "service provider",
        "environment",
        "conditional"
    ],
    "homepage": "https://github.com/sebastiaanluca/laravel-conditional-providers",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastiaan Luca",
            "email": "hello@sebastiaanluca.com",
            "homepage": "https://www.sebastiaanluca.com",
            "role": "Author"
        }
    ],
    "require": {
        "laravel/framework": "5.7.*",
        "php": "^7.2"
    },
    "require-dev": {
        "orchestra/testbench": "3.7.*",
        "phpunit/phpunit": "^7.3",
        "sebastiaanluca/php-codesniffer-ruleset": "^0.1",
        "slevomat/coding-standard": "^4.7",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "SebastiaanLuca\\ConditionalProviders\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SebastiaanLuca\\ConditionalProviders\\Tests\\": "tests"
        }
    },
    "scripts": {
        "validate-composer": "@composer validate --no-check-all --strict",
        "codesniffer-check": "vendor/bin/phpcs --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "codesniffer-fix": "vendor/bin/phpcbf --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests || exit 0",
        "test": "vendor/bin/phpunit",
        "analyze": [
            "@validate-composer",
            "@codesniffer-check",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "SebastiaanLuca\\ConditionalProviders\\ConditionalProvidersServiceProvider"
            ]
        }
    }
}
